<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/_recycler_item_user_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/a11y_user_picture"
        android:paddingRight="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,RtlSymmetry"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/_recycler_item_user_name"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/_recycler_item_user_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/_recycler_item_user_age"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/_recycler_item_user_image"
        app:layout_constraintTop_toBottomOf="@id/_recycler_item_user_name"
        tools:text="21" />

    <TextView
        android:id="@+id/_recycler_item_user_location"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/_recycler_item_user_image"
        app:layout_constraintTop_toBottomOf="@id/_recycler_item_user_age"
        tools:text="@tools:sample/cities" />


</android.support.constraint.ConstraintLayout>